	<script language="JavaScript">
		const refreshTimeout = window.setInterval(updateProgress, 10000);
		window.addEventListener("DOMContentLoaded", updateProgress);
		async function updateProgress() {
			const progressRequest = await fetch("progress.json");
			if (progressRequest.ok) {
				const progressObj = await progressRequest.json();
				if (progressObj) {
					document.querySelector("body div.ProgressNotes").innerHTML = `<h1>Site Updating...</h1>`;
					progressObj.forEach((entry) => {
						let newLine = document.getElementById("progressLine").content.cloneNode(true);
						newLine.querySelector("div.taskDescription").textContent = entry.description;
						if (entry.total) {
							newLine.querySelector("progress").max = entry.total;
							newLine.querySelector("progress").value = entry.progress + 1;
							newLine.querySelector("span.taskNumbers").textContent = `${entry.progress}/${entry.total}`;
						}
						if (entry.eta) {
							newLine.querySelector("span.taskETA").textContent = entry.eta;
						}
						newLine.id = `task-${entry.taskName}`;
						document.querySelector("body div.ProgressNotes").appendChild(newLine);
					});
				} else {
					document.querySelector("body div.ProgressNotes").innerHTML = "";
					window.clearInterval(refreshTimeout);
				}
			}
		}
	</script>
</head>
